{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "functions": [
    {
      "source": "backend/functions",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log"
      ],
      "predeploy": [
        "npm --prefix \"$RESOURCE_DIR\" install", 
        "npm --prefix \"$RESOURCE_DIR\" run lint"  
      ]
    }
  ],
  "hosting": {
    "public": "frontend/dist", 
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        
        "source": "/api/**",
        "function": "api" 
      },
      {
        
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "emulators": {
    "auth": {
      "port": 8070
    },
    "functions": {
      "port": 5001 
    },
    "firestore": {
      "port": 8085 
    },
    "hosting": {
      "port": 5000
    },
    "ui": {
      "enabled": true,
      "port": 4000  
    }
  }
}